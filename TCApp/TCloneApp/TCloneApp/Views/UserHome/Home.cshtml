@using (@Html.BeginForm("UserHomeOperations", "UserHome", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<h2 style="color:whitesmoke">
    Welcome @Model.user.DisplayName &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
    @Html.ActionLink("Edit Profile", "EditProfile", "Profile", Model.user, new { @class = "fntlnk" })
</h2>
    
    <nav class="navbar navbar-light bg-white">
        <div class="input-group">

            @*<input type="text" class="form-control" aria-label="Recipient's username" id="txtSearch"
        placeholder="Search Users" aria-describedby="button-addon2" width="100%">*@
            @Html.TextBox("txtSearch", "", new { @class = "form-control" })
            <div class="input-group-append">
                @*<a class="btn btn-outline-primary" id="button-addon2"
        href="@Url.Action("SearchPage/" + , "UserHome")">
         <i class="fa fa-search"></i>                </a>*@
                <input type="submit" value="Search" id="btnSearch" name="submitButton" 
                       class="btn btn-primary btEdit" />
            </div>

        </div>
    </nav>
    <div class="container-fluid gedf-wrapper">
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <div class="h6 text-muted">Followers</div>
                            <div class="h5">
                                <a href="@Url.Action("FollowerPage/" + Model.user.ID, "UserHome")">
                                    @if (Model.FollowersList != null && Model.FollowersList.Count() > 0)
                                    {
                                        @Model.FollowersList.Count()
                                    }
                                    else
                                    {
                                        0.ToString();
                                    }
                                </a>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="h6 text-muted">Following</div>
                            <div class="h5">
                                <a href="@Url.Action("FollowingPage/" + Model.user.ID, "UserHome")">
                                    @if (Model.FollowingList != null && Model.FollowingList.Count() > 0)
                                    {
                                        @Model.FollowingList.Count()
                                    }
                                    else
                                    {
                                        0.ToString();
                                    }
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9 gedf-main" width="100%">
                <!--- \\\\\\\Post-->
                <div class="card gedf-card" width="100%">
                    <div class="card-header fntCustom">
                        Make
                        a publication
                    </div>

                    <div class="card" width="100%">
                        @Html.Hidden("UsrID", Model.user.ID.ToString())
                        @Html.TextArea("msgTweet")
                    </div>
                    <div class="card-header">
                        <input type="submit" value="share" id="btnShare" name="submitButton" class="btn btn-primary" />
                        @*<button type="submit" name="share" class="btn btn-primary fntCustom" id="btnShare">share</button>*@
                    </div>

                </div>
                <!-- Post /////-->
                <!--- \\\\\\\Post-->

                <div class="card gedf-card fntCustom">
                    <div class="card-header">
                        <div class="table table-hover table-bordered">
                            @foreach (var Tweet in Model.tweetDetails)
                            {
                                <div class="h5 m-0 card-header fntCustom">
                                    @Tweet.UserName
                                    &emsp; <span class="h7 fntCustom">@Tweet.Updated</span>
                                    &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                                    <a href="#" id="imgEdit_@Tweet.ID" class="edtLink">
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                </div>
                                <br />
                                <div class="h7 m-0 fntCustom">
                                    @Html.TextArea("msgEdtTweet", Tweet.Message, new { @disabled = "disabled", id = Tweet.ID })
                                    @Html.Hidden("TweetID", Tweet.ID.ToString())

                                </div>
                                <input type="submit" value="Save" id="btnSave_@Tweet.ID" name="submitButton" class="btn btn-primary btEdit" style="visibility:hidden" />
                                <input type="submit" value="Cancel" id="btnCancel_@Tweet.ID" name="submitButton" class="btn btn-primary btEdit" style="visibility:hidden" />
                                <input type="submit" value="Delete" id="btnDelete_@Tweet.ID" name="submitButton" class="btn btn-danger" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>


    </div>
}
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/customvalidate");
}


